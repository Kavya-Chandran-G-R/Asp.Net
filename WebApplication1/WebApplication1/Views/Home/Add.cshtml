@model Register;
@{
    ViewData["Title"] = "Add";
}
<div class="pt-4">
<form method="post" class="border p-2 bg-white" >
    <fieldset>
        
      @* <div asp-validation-summary="All" ></div>*@
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control"  >
                <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label mt-4"></label>
            <input asp-for="Email" class="form-control" >
                <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label mt-4"></label>
            <input asp-for="PhoneNumber" class="form-control" >
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class=" pt-4">
            <button type="submit" class="btn btn-info">Submit</button>
            <a asp-controller="Home" asp-action="Home" class="btn btn-info">Back</a>
        </div>
        
    </fieldset>
</form>
    <Partial name="_Notification" />
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}