@model IEnumerable<Register>
@{
    ViewData["Title"] = "Home";
}
<div class="col-12">
    <div class="row pt-5 pb-2" >
        
        <div class="col-6">
            <h3>Table</h3>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Home" asp-action="Add" class="btn btn-info">Add</a>
        </div>
        
   </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Phone Number</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userlist in Model)
                {
                    <tr class="table-dark">
                        <th scope="row"></th>
                        <td>@userlist.Name</td>
                        <td>@userlist.Email</td>
                        <td>@userlist.PhoneNumber</td>
                        <td>
                            <a asp-route-id="@userlist.Id" asp-controller="Home" asp-action="Edit" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
                            <a asp-route-id="@userlist.Id" asp-controller="Home" asp-action="Delete" class="btn btn-info"><i class="bi bi-trash"></i> </a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<a asp-controller="Home" asp-action="Index" class="btn btn-info">Back</a>
<Partial name="_Notification" />





